@model IEnumerable<Telephones.Models.Information>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    string SignIn = "Admin@yahoo.com";
}
@{
    ViewData["Title"] = "Search Phone";
}
@if (SignInManager.IsSignedIn(User) == false) /* Visitor */
{
    <h1 style="position: absolute;top: 50%;left: 50%;-ms-transform: translateX(-50%) translateY(-50%);-webkit-transform: translate(-50%,-50%);transform: translate(-50%,-50%);color:red">
        !!!Access for Visitors is prohibited!!!
    </h1>
}
else if (@SignIn == @User.Identity?.Name && SignInManager.IsSignedIn(User)) /* Admin */
{
    <h4 style="margin-top:25px" >Search Phone (Admin)</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ShowResultPhone">
                <div class="form-group">
                    <label for="SearchPhoneNumber" class="control-label"></label>
                    <input name="SearchPhoneNumber" class="form-control" />
                </div>
                <div class="form-group" style="padding-bottom: 25px;padding-top: 25px">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <a asp-action="Index">
        <div class="form-group">
            <input value="Back to List" class="btn btn-primary" />
        </div>
    </a>
}
else{
    <h4 style="margin-top:25px">Search Phone</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ShowResultPhone">
                <div class="form-group">
                    <label for="SearchPhoneNumber" class="control-label"></label>
                    <input name="SearchPhoneNumber" class="form-control" />
                </div>
                <div class="form-group" style="padding-bottom: 25px;padding-top: 25px">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <a asp-action="Index">
        <div class="form-group">
            <input value="Back to List" class="btn btn-primary" />
        </div>
    </a>
}